<Page
    x:Class="Lucy.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea">
        <Grid.RowDefinitions>
            <RowDefinition Height="72" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Top pannel -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Avatar -->
            <PersonPicture 
                Grid.Column="0" 
                
                Height="54"
                Margin="16, 6, 0, 0"
                VerticalAlignment="Center"
                Initials="啊?"
                
                ProfilePicture="https://i1.hdslb.com/bfs/face/548fa2f64195cd9fe4935244e13673bc202d051c.jpg"
            ></PersonPicture>


            <Grid 
                Grid.Column="1"
                Margin="12, 0, 0, 0"
                >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>


                <!-- Row top -->
                <Grid 
                    Grid.Row="0"
                    >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>



                    <DropDownButton 
                        Grid.Column="0"
                        
                        Content="COM23"
                        
                        CornerRadius="8"
                        Margin="2, 0, 6, 0"
                        Opacity="0.8"
                        Background="Transparent"
                        BorderThickness="0"
                        
                        FontSize="14"
                        FontWeight="Medium"
                        FontFamily="Cascadia Code"
                        >
                        <DropDownButton.Flyout>
                            <MenuFlyout Placement="Bottom">
                                <MenuFlyoutItem Text="Send"/>
                                <MenuFlyoutItem Text="Reply"/>
                                <MenuFlyoutItem Text="Reply All"/>
                            </MenuFlyout>
                        </DropDownButton.Flyout>
                    </DropDownButton>



                    <DropDownButton 
                        Grid.Column="1"
                        
                        Content="115200"
                        
                        CornerRadius="8"
                        Margin="6, 0, 6, 0"
                        Opacity="0.8"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        
                        FontSize="14"
                        FontWeight="Medium"
                        >
                        <DropDownButton.Flyout>
                            <MenuFlyout Placement="Bottom">
                                <MenuFlyoutItem Text="Send"/>
                                <MenuFlyoutItem Text="Reply"/>
                                <MenuFlyoutItem Text="Reply All"/>
                            </MenuFlyout>
                        </DropDownButton.Flyout>
                    </DropDownButton>





                    <!-- Title -->
                    <Grid
                        Grid.Column="2"
                        x:Name="MainPageTitleBar"
                        >
                        <TextBlock
                            Margin="0, 0, 270, 0" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="12"
                            FontWeight="Normal"
                            FontFamily="Cascadia Code"
                            FontStyle="Italic"
                            Opacity="0.8"
                            >
                            <!--<Span FontSize="16" FontStyle="Normal">🌕</Span>-->
                            <Span>Lucy Serial-Monitor</Span>
                        </TextBlock>
                    </Grid>
                    
                    
                    
                </Grid>



                <!-- Row bottom -->
                <Grid 
                    Grid.Row="1"
                    >

                    <!-- Control pannel -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>



                    <!--Command="{x:Bind ViewModel.GoPageSettingsCommand}"-->
                    
                    <ToggleButton 
                        Grid.Column="0"
                        
                        Width="128"
                        
                        CornerRadius="8"
                        Margin="8, 0, 6, 0"
                        Opacity="0.8"

                        FontSize="14"
                        FontWeight="Medium"
                        FontFamily="Cascadia Code"
                        >
                        CLOSED
                    </ToggleButton>






                    <TextBox 
                        Grid.Column="2"
                        
                        
                        
                        MaxWidth="360"
                        Margin="12, 0, 6, 0"
                        CornerRadius="8"
                        Opacity="0.8"
                        Background="Transparent"
                        BorderThickness="0"
                        
                        
                        
                        AcceptsReturn="True"
                        FontSize="12"
                        FontWeight="Normal"
                        FontFamily="Cascadia Mono"
                        >
                    </TextBox>


                    <Button
                        Grid.Column="3"
                        
                        CornerRadius="8"
                        Margin="6, 0, 14, 0"
                        Opacity="0.8"

                        FontSize="12"
                        FontWeight="Light"
                        FontFamily="Cascadia Code"
                        >
                        SEND
                    </Button>
                        
                        
                        


                </Grid>
            </Grid>
        </Grid>





        


        <ScrollViewer 
            Grid.Row = "1"
            IsTabStop="True"
            Margin="0, 12, 0, 12"
            Opacity="0.9"
            >


            <RichTextBlock
                x:Name="SerialReceiveTextBlock"
                Padding="18, 0, 18, 0"
                
                
                
                FontSize="15"
                FontWeight="SemiLight"
                FontFamily="Cascadia Mono"
                LineHeight="26"
                ></RichTextBlock>
            


        </ScrollViewer>
        
        
        
        



    </Grid>
</Page>
