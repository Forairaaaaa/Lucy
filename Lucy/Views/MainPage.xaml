<Page
    x:Class="Lucy.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="64" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Top pannel -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            
            <!-- Avatar -->
            <!--Command="{x:Bind ViewModel.GoPageSettingsCommand}"-->
            <!--ProfilePicture="https://i1.hdslb.com/bfs/face/548fa2f64195cd9fe4935244e13673bc202d051c.jpg"-->
            <Button 
                Grid.Column="0" 
                
                VerticalAlignment="Center"
                Padding="0"
                Margin="16, 10, 0, 0"
                CornerRadius="12"
                Background="Transparent"
                BorderThickness="0"
                
                Command="{x:Bind ViewModel.GoPageSettingsCommand}"
                >
                <PersonPicture
                    Height="54"
                    ProfilePicture="https://media.tenor.com/_RzPjwWKk6YAAAAd/comida.gif"
                >
                </PersonPicture>
            </Button>

            
            <Grid 
                Grid.Column="1"
                >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>


                <!-- Row top -->
                <Grid 
                    Grid.Row="0"
                    >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>



                    <ToggleSwitch
                        Grid.Column="0"
                        
                        
                        Margin="21, 0, 0, 0"
                        Opacity="0.8"
                        VerticalAlignment="Bottom"
                        
                        OffContent="_(:з」∠)_"
                        OnContent=" (ᗜ ‸ ᗜ)"
                        
                        

                        FontSize="10"
                        FontFamily="Cascadia Mono"
                        >
                    </ToggleSwitch>





                    <!-- Title -->
                    <Grid
                        Grid.Column="2"
                        x:Name="MainPageTitleBar"
                        >
                        <TextBlock
                            Margin="0, 0, 250, 0" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="12"
                            FontWeight="Normal"
                            FontFamily="Cascadia Code"
                            FontStyle="Italic"
                            Opacity="0.8"
                            >
                            <!--<Span FontSize="16" FontStyle="Normal">🌕</Span>-->
                            <Span>Lucy Serial-Monitor</Span>
                        </TextBlock>
                    </Grid>
                    
                    
                    
                </Grid>



                <!-- Row bottom -->
                <Grid 
                    Grid.Row="1"
                    >

                    <!-- Control pannel -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>



                    <DropDownButton 
                        Grid.Column="0"
    
                        Content="COM23"
    
                        CornerRadius="8"
                        Margin="12, 0, 0, 0"
                        Opacity="0.8"
                        VerticalAlignment="Bottom"
                        Background="Transparent"
                        BorderThickness="0" 
    
                        FontSize="13"
                        FontStyle="Italic"
                        FontWeight="Normal"
                        FontFamily="Cascadia Code"
                        
                        ToolTipService.ToolTip="Port Name"
                        >
                        <DropDownButton.Flyout>
                            <MenuFlyout Placement="Bottom">
                                <MenuFlyoutItem Text="Send"/>
                                <MenuFlyoutItem Text="Reply"/>
                                <MenuFlyoutItem Text="Reply All"/>
                            </MenuFlyout>
                        </DropDownButton.Flyout>
                    </DropDownButton>



                    <DropDownButton 
                        Grid.Column="1"
    
                        Content="115200"
    
                        CornerRadius="8"
                        Margin="6, 0, 0, 0"
                        Opacity="0.8"
                        VerticalAlignment="Bottom"
                        Background="Transparent"
                        BorderThickness="0"
    
                        FontSize="13"
                        FontStyle="Italic"
                        FontWeight="Normal"
                        FontFamily="Cascadia Code"
                        
                        ToolTipService.ToolTip="Baud Rate"
                        >
                        <DropDownButton.Flyout>
                            <MenuFlyout Placement="Bottom">
                                <MenuFlyoutItem Text="Send"/>
                                <MenuFlyoutItem Text="Reply"/>
                                <MenuFlyoutItem Text="Reply All"/>
                            </MenuFlyout>
                        </DropDownButton.Flyout>
                    </DropDownButton>








                        
                        
                        


                </Grid>
            </Grid>
        </Grid>





        


        <ScrollViewer 
            Grid.Row = "1"
            IsTabStop="True"
            Margin="0, 12, 0, 12"
            Opacity="0.9"
            >


            <RichTextBlock
                x:Name="SerialReceiveTextBlock"
                Padding="18, 0, 18, 0"
                
                
                
                FontSize="15"
                FontWeight="SemiLight"
                FontFamily="Cascadia Mono"
                LineHeight="26"
                ></RichTextBlock>
            


        </ScrollViewer>
        
        
        
        



    </Grid>
</Page>
